                      materialDesign:ShadowAssist.ShadowDepth="Depth3"
                      ClipToBounds="False">
                        <StackPanel
                        Orientation="Horizontal">
                            <TextBlock
                          VerticalAlignment="Center"
                          Margin="16 0 0 0"
                          Text="4- Energia                                                                      - R$648,45"/>
                        </StackPanel>
                    </materialDesign:ColorZone>
                </StackPanel>

                <StackPanel Margin="0 0 0 15">
                    <materialDesign:ColorZone
