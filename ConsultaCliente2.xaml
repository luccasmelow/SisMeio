                Content="Sandália Ramarim 32" />
        </ComboBox>
        <ComboBox
            x:Name="ComprasRealizadas"
            Style="{StaticResource MaterialDesignFilledComboBox}"
            IsEnabled="{Binding IsChecked, ElementName=FilledComboBoxEnabledCheckBox}"
            materialDesign:HintAssist.Hint="Some item" Margin="906,610,182,124">
            <ComboBoxItem
                Content="Chinelo Havaina 34" />
            <ComboBoxItem
                Content="Tenis Adidas 34" />
            <ComboBoxItem
                Content="Sandália Ramarim 32" />
        </ComboBox>
