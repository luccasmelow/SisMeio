        <Label Content="Complemento:" VerticalAlignment="Top" HorizontalAlignment="Left" Margin="679,382,0,0" FontSize="16" FontFamily= "Lucida Sans Unicode" FontWeight="Bold" RenderTransformOrigin="0.507,0.856" Height="33" Width="126"/>
        <Label Content="Cidade:" VerticalAlignment="Top" Margin="679,442,211,0" FontSize="16" FontFamily= "Lucida Sans Unicode" FontWeight="Bold" RenderTransformOrigin="0.507,0.856" Height="33"/>
        <Label Content="Bairro:" VerticalAlignment="Top" HorizontalAlignment="Left" Margin="119,442,0,0" FontSize="16" FontFamily= "Lucida Sans Unicode" FontWeight="Bold" RenderTransformOrigin="0.507,0.856" Height="33" Width="61"/>
