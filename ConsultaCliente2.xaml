        <ComboBox
        x:Name="ComprasPendentes"
        Style="{StaticResource MaterialDesignFilledComboBox}"
        IsEnabled="{Binding Path=IsChecked, ElementName=FilledComboBoxEnabledCheckBox}"
        materialDesign:HintAssist.Hint="Some item" Margin="318,610,816,126">
            <ComboBoxItem
         Content="Devedor" />
            <ComboBoxItem
        Content="Item 2" />
            <ComboBoxItem
        Content="Item 3" />
        </ComboBox>
        <ComboBox
            x:Name="ComprasPagas"
            Style="{StaticResource MaterialDesignFilledComboBox}"
            IsEnabled="{Binding IsChecked, ElementName=FilledComboBoxEnabledCheckBox}"
            materialDesign:HintAssist.Hint="Some item" Margin="597,610,516,124" SelectionChanged="ComprasPagas_SelectionChanged">
            <ComboBoxItem
                Content="Chinelo Havaina 34" />
            <ComboBoxItem
                Content="Tenis Adidas 34" />
