        <ComboBox
            x:Name="Situação"
            Style="{StaticResource MaterialDesignFilledComboBox}"
            IsEnabled="{Binding IsChecked, ElementName=FilledComboBoxEnabledCheckBox}"
            materialDesign:HintAssist.Hint="Some item" Margin="90,612,1044,124">
            <ComboBoxItem
                Content="Devedor" />
            <ComboBoxItem
                Content="Item 2" />
            <ComboBoxItem
                Content="Item 3" />
        </ComboBox>

    </Grid>


</Window>
