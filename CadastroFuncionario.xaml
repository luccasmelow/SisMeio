<Window x:Class="Sismeio.CadastrarFuncionario"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Sismeio"
        mc:Ignorable="d"
        xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
        
        
        TextElement.Foreground="{DynamicResource MaterialDesignBody}"    
        TextElement.FontWeight="Regular"
        TextElement.FontSize="12"
        TextOptions.TextFormattingMode="Ideal" 
        TextOptions.TextRenderingMode="Auto"        
        
        Background="{DynamicResource MaterialDesignPaper}"
        FontFamily="{DynamicResource MaterialDesignFont}"
        
        Title="CadastroFuncionário">

    <Grid Background="#ffffff" Height="502" Width="787">



        <StackPanel Margin="24,40,409,40" RenderTransformOrigin="0.5,0.449">

            <TextBlock FontSize="30" FontWeight="Bold" Width="300" Height="51" Margin="0,0,-30,0"><Run Language="pt-br" Text="Cadastrar Funcionário"/></TextBlock>

            <TextBox materialDesign:HintAssist.Hint="Nome" Style="{StaticResource MaterialDesignFloatingHintTextBox}" Margin="0 10" Width="262"/>
            <TextBox materialDesign:HintAssist.Hint="CPF" Style="{StaticResource MaterialDesignFloatingHintTextBox}" Margin="0 10" Width="262" />
            <TextBox materialDesign:HintAssist.Hint="RG" Style="{StaticResource MaterialDesignFloatingHintTextBox}" Margin="0 10" Width="262" />
            <TextBox materialDesign:HintAssist.Hint="Telefone" Style="{StaticResource MaterialDesignFloatingHintTextBox}" Margin="0 10" Width="262" />
            <DatePicker
                materialDesign:HintAssist.Hint="Janeiro"
                Style="{StaticResource MaterialDesignOutlinedDatePicker}" Width="267" Margin="-1,16,0,0" Height="51" />

            <TextBlock FontSize="16" FontWeight="Medium" Width="262" Height="25" Margin="0,18,2,-5"><Run Language="pt-br" Text="Endereço"/></TextBlock>

            <TextBox materialDesign:HintAssist.Hint="Rua" Style="{StaticResource MaterialDesignFloatingHintTextBox}" Margin="0 10" Width="262" />

        </StackPanel>



        <StackPanel Margin="404,88,47,-5" RenderTransformOrigin="0.5,0.449">

            <TextBox materialDesign:HintAssist.Hint="Bairro" Style="{StaticResource MaterialDesignFloatingHintTextBox}" Margin="0 10" Width="262"/>
            <TextBox materialDesign:HintAssist.Hint="CEP" Style="{StaticResource MaterialDesignFloatingHintTextBox}" Margin="0,10,-142,-44" Width="125" />
            <TextBox materialDesign:HintAssist.Hint="Número" Style="{StaticResource MaterialDesignFloatingHintTextBox}" Margin="-133,10,0,10" Width="127" />
            <TextBox materialDesign:HintAssist.Hint="Cidade" Style="{StaticResource MaterialDesignFloatingHintTextBox}" Margin="0 10" Width="262" />

            <TextBox materialDesign:HintAssist.Hint="Complemento" Style="{StaticResource MaterialDesignFloatingHintTextBox}" Margin="0 10" Width="262" />


            <Button Content="Cadastrar" Width="273" Margin="0,19,0,0"/>
            <Button Content="Cancelar" Width="273" Margin="0,19,0,0" Background="#FFC90339" BorderBrush="{x:Null}"/>
        </StackPanel>

    </Grid>
</Window>
